{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "include": ["*.config.*", "src/**", "bin/**", "**/*.json", "**/*.md", "**/*.yaml", "**/*.yml"],
    "ignore": ["node_modules", "dist", "coverage"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules", "src/**/__snapshots__"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": ["node_modules", "src/**/__snapshots__"]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double"
    }
  }
}
